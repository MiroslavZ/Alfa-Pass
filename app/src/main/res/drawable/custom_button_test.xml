<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#fffcb0"
                android:endColor="#fffa7d"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ffd9a1"
                android:startColor="#ffc97a"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#9eb8ff"
                android:startColor="#7096ff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#9e9e9e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>